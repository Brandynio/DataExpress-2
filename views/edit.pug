extends layout

block content
  div(id="content")
    h3 Edit Account
    form(id='form', method='post', action='/edit')
      label(for='Username') Username
      br
      input(type='text', name='Username' value=user.Username)
      br
      label(for='Password') Password
      br
      input(type='text', name='Password' value=user.Password)
      br
      label(for='Email') Email
      br
      input(type='text', name='Email' value=user.Email)
      br
      label(for='Age') Age
      br
      input(type='text', name='Age' value=user.Age)
      br
      label(for='Q1') Which Neumont degree is the best?
      br
      select(name='Q1')
        option(selected = user.Q1) #{user.Q1}

        option(value='A. Web Development and Design') A. Web Development and Design
        option(value='B. Software and Game Development') B. Software and Game Development
        option(value='C. Information Systems') C. Information Systems
        option(value='D. Technology Managment') D. Technology Managment
        option(value='E. Computer Science') E. Computer Science
      br
      label(for='Q2') Which Pokemon generation is the best?
      br
      select(name='Q2')
        option(selected = user.Q2) #{user.Q2}

        option(value='A. Gen 1') A. Gen 1
        option(value='B. Gen 2') B. Gen 2
        option(value='C. Gen 3') C. Gen 3
        option(value='D. Gen 4') D. Gen 4
        option(value='E. Gen 5') E. Gen 5
        option(value='F. Gen 6') F. Gen 6
        option(value='G. Gen 7') G. Gen 7
        option(value="H. I don't like Pokemon!") H. I don't like Pokemon!
      br
      label(for='Q3') What system do you mainly play games on?
      br
      select(name='Q3')
        option(selected = user.Q3) #{user.Q3}

        option(name='A. PC') A. PC
        option(name='B. PS4') B. PS4
        option(name='C. Xbox One') C. Xbox One
        option(name='D. Switch') D. Switch
        option(name="E. I don't play games") E. I don't play games
      br
      input(type='submit', value='Save')